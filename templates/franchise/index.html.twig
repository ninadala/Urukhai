{% extends "base.html.twig" %}

{% block body %}
    <a  class="btn btn-primary mt-3" href="/franchise/new"><i class="fa-solid fa-plus"></i> Franchise</a>
    
    <div class="container mt-5">
        
        {% for franchise in franchises %}

            <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
               <div class="d-flex">
                    <div class="d-flex">
                        {{ franchise.name }} - Admin : {{ franchise.user.lastname }} {{ franchise.user.firstname }}  
                    </div>
                    <div class="d-flex ml-4">
                        {% if franchise.salles is empty %}
                        <p> - Pas de salles  </p>
                        {% else %}
                        <p> - {{ franchise.salles|length }} salles  </p>
                        {% endif %}
                    </div>
                    <div class="d-flex ml-4">
                        {% if franchise.permissions is empty %}
                        <p> - Pas de permissions globales - </p>
                        {% else %}
                        <p> - {{ franchise.permissions|length }} permissions globales - </p>
                        {% endif %}
                    </div>
                </div>

                <div class="d-flex">
                    <span class="badge bg-danger rounded-pill">
                        <a href="{{ path('delete-franchise', {'id':franchise.id}) }}" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                    </span>
                    <span class="badge bg-warning rounded-pill">
                        <a href="{{ path('edit-franchise', {'id':franchise.id}) }}" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                    </span>
                    <span class="badge bg-primary rounded-pill">
                        <a href="{{ path('fiche-franchise', {'id':franchise.id}) }}" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                    </span>
               </div>
                
            </li>
        </ul>
        {# <a href="#" class="list-group-item list-group-item-action disabled" tabindex="-1" aria-disabled="true">A disabled link item</a> #}
        {% endfor %}
    </div>
{% endblock %}